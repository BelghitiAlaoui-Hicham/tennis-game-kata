{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "baseUrl": "./",
    "outDir": "build",
    "rootDir": "src",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "compilerOptions": {
    "types": ["jest", "node"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "./coverage/*",
    "./build/*",
    "./jest.config.js",
    "./src/**/*.spec.ts"
  ]
}